# AI Email Assistant Environment Variables
# Copy this file to .env and fill in your values

# Google Gemini API Key (Required)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# Application Settings
APP_DEBUG=false
APP_LOG_LEVEL=INFO

# Email Cache Settings
MAX_CACHE_SIZE_MB=500
CACHE_RETENTION_DAYS=30

# Email Provider Settings (Optional)
# Default IMAP/SMTP settings for common providers

# Gmail
# IMAP: imap.gmail.com:993
# SMTP: smtp.gmail.com:587
# Note: For Gmail, use App Passwords: https://myaccount.google.com/apppasswords

# Outlook
# IMAP: outlook.office365.com:993
# SMTP: smtp.office365.com:587

# Yahoo Mail
# IMAP: imap.mail.yahoo.com:993
# SMTP: smtp.mail.yahoo.com:587

# Custom Email Provider Template
# CUSTOM_IMAP_HOST=mail.example.com
# CUSTOM_IMAP_PORT=993
# CUSTOM_SMTP_HOST=mail.example.com
# CUSTOM_SMTP_PORT=587

# Security Settings
ENCRYPTION_KEY_PATH=~/.ai-email-assistant/keys/
CREDENTIAL_STORAGE=system  # system, file, or memory